#ifndef QUICK_HH
#define QUICK_HH
#include <iostream>
#include"tablica.hh"

using namespace std;

/*!
 * \file
 * \brief Definicja klasy quick_sort (sortowanie szybkie)
 *
 */

/*! \brief Definicja klasy quick_sort
 * 
 */
class quick_sort {
	public:
	int podzial(int *tablica, int m, int n);
	void sortowanie(int *tablica, int m, int n);
	int dlugosc;

	quick_sort(tablica &Tab) {dlugosc=Tab.ilosc, sortowanie(Tab.tab_1,0,dlugosc-1);}
};
#endif
